{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}